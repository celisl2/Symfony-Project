{% extends 'base.html.twig' %}

{% block body %}
    <h1>News List</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Article</th>
                <th>Category</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr class="contact">
                <td><a style="color:black;" href="{{ path('admin_News_show', { 'id': news.id }) }}">{{ news.id }}</a></td>
                <td>{{ news.title }}</td>
                <td>{{ news.article }}</td>
                <td>{{ news.category }}</td>
                <td>{% if news.date %}{{ news.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    
                    <p>
                            <a style="color:black;" href="{{ path('admin_News_show', { 'id': news.id }) }}">show</a>
                        </p>
                        <p>
                            <a style="color:black;" href="{{ path('admin_News_edit', { 'id': news.id }) }}">edit</a>
                        </p>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_News_new') }}"style="color: black;">Create A New News Article</a>
        </li>
    </ul>
{% endblock %}
